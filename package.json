{
    "name": "fluffy-guide",
    "version": "1.0.0",
    "description": "webpack typescript stylus",
    "main": "index.js",
    "scripts": {
        "dev": "webpack serve --mode development",
        "dev:prod": "webpack serve --mode production",
        "build": "webpack --mode production"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "printWidth": 200,
        "semi": false,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "src/**/*.{json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@types/html-webpack-plugin": "^3.2.4",
        "@types/node": "^14.14.14",
        "@types/promise": "^7.1.30",
        "@types/webpack": "^4.41.25",
        "@types/whatwg-fetch": "^0.0.33",
        "@typescript-eslint/eslint-plugin": "^4.11.0",
        "@typescript-eslint/parser": "^4.11.0",
        "autoprefixer": "^10.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^5.0.1",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-webpack-plugin": "^2.4.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.0.0-beta.1",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "mini-css-extract-plugin": "^1.3.3",
        "postcss": "^8.2.1",
        "postcss-import": "^14.0.0",
        "postcss-loader": "^4.1.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "promise": "^8.1.0",
        "react-scoped-styles": "^0.3.2",
        "style-loader": "^2.0.0",
        "stylus": "^0.54.8",
        "stylus-loader": "^4.3.1",
        "ts-loader": "^8.0.12",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "url-loader": "^4.1.1",
        "webpack": "^5.11.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0",
        "whatwg-fetch": "^3.5.0"
    },
    "dependencies": {},
    "repository": {
        "type": "git",
        "url": "git+https://github.com/almoce/fluffy-guide.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/almoce/fluffy-guide/issues"
    },
    "homepage": "https://github.com/almoce/fluffy-guide#readme"
}
